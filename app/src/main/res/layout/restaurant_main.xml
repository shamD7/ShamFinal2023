<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="286dp"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/tvRname"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:hint=" NAME :"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvRphoneNumber"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="PHONE NUMBER :"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tvRlocatoin"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="LOCATOIN :"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvRworkingHours"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="WORKING HOURS :"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnRestMnue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickResMenu"
            android:text="THE MENU :"
            android:textSize="25sp" />

    </LinearLayout>
</RelativeLayout>